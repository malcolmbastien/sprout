---
import Layout from "../layouts/Layout.astro";
import BackToGarden from "../components/Navigation/BackToGarden.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<Layout
    title="About - Your Name"
    description="Learn about Your Name, a professional in Your Field."
    type="website"
>
    <main class="max-w-7xl mx-auto p-4 md:p-8" data-pagefind-ignore>
        <BackToGarden class="mb-6" />

        <div class="flex flex-col lg:flex-row gap-8">
            <article class="flex-1 max-w-4xl" data-pagefind-body>
                <div
                    class="bg-white dark:bg-[#121812] p-6 rounded-lg shadow-sm"
                >
                    <div class="mb-8">
                        <div
                            class="flex flex-col md:flex-row items-center md:items-start gap-8 mb-8"
                        >
                            <!-- Placeholder for Portrait
                            <div class="shrink-0">
                                <div class="w-48 h-64 bg-slate-200 dark:bg-slate-700 rounded-lg flex items-center justify-center text-slate-400">
                                    Your Photo
                                </div>
                            </div>
                            -->
                            <div class="flex-1">
                                <h1
                                    class="text-4xl font-extrabold text-slate-900 dark:text-white tracking-tight mb-4"
                                >
                                    About
                                </h1>
                                <p
                                    class="text-xl text-slate-600 dark:text-slate-300 italic mb-4"
                                >
                                    I'm a [Your Role] from [Your Location], passionate about [Your Interests].
                                </p>
                                <p
                                    class="text-slate-700 dark:text-slate-300 leading-relaxed"
                                >
                                    This is a space where I share my thoughts, learnings, and experiments.
                                    Feel free to explore my digital garden!
                                </p>
                            </div>
                        </div>
                    </div>

                    <div
                        class="prose prose-slate dark:prose-invert prose-lg max-w-none"
                    >
                        <h2
                            id="career-timeline"
                            class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight mb-8 border-b border-slate-200 dark:border-slate-700 pb-2 mt-4!"
                        >
                            Experience
                        </h2>

                        <div class="relative">
                            <div class="space-y-6">
                                <div class="relative flex items-start">
                                    <div
                                        class="shrink-0 w-16 h-16 bg-emerald-500 rounded-full flex items-center justify-center shadow-lg z-10"
                                    >
                                        <span class="text-white text-2xl">ðŸ’¼</span>
                                    </div>
                                    <div
                                        class="ml-8 flex-1 bg-slate-50 dark:bg-slate-800 rounded-lg p-4 shadow-sm"
                                    >
                                        <div
                                            class="flex flex-col md:flex-row md:items-center md:justify-between mb-2"
                                        >
                                            <h3
                                                class="text-xl font-bold text-slate-900 dark:text-slate-100 mt-4!"
                                            >
                                                Your Current Role
                                            </h3>
                                            <span
                                                class="text-emerald-600 dark:text-emerald-400 font-semibold text-lg"
                                                >Year â€“ Present</span
                                            >
                                        </div>
                                        <h4
                                            class="text-lg font-semibold text-slate-700 dark:text-slate-300 mb-1 mt-4!"
                                        >
                                            Company Name
                                        </h4>
                                        <p
                                            class="text-slate-600 dark:text-slate-400 mb-3 leading-relaxed"
                                        >
                                            Description of your role and achievements.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h2
                            id="education"
                            class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tight mb-6 border-b border-slate-200 dark:border-slate-700 pb-2 mt-8"
                        >
                            Education
                        </h2>
                        <div class="border-l-4 border-indigo-500 pl-6">
                            <h3
                                class="text-xl font-semibold text-slate-900 dark:text-slate-100 mb-1 mt-4!"
                            >
                                University / School Name
                            </h3>
                            <p
                                class="text-indigo-600 dark:text-indigo-400 font-medium mb-2"
                            >
                                Year â€“ Year
                            </p>
                            <p class="text-slate-700 dark:text-slate-300">
                                Degree / Certificate
                            </p>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </main>
    <SiteFooter />
</Layout>
