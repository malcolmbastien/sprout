---
import Layout from "../layouts/Layout.astro";
import ProfileHeader from "../components/Profile/ProfileHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";

const title = "Page Not Found - 404";
const description = "The page you're looking for doesn't exist. Let's get you back to the garden.";
---

<Layout title={title} description={description}>
    <main class="max-w-4xl mx-auto p-4 md:p-8">
        <ProfileHeader />

        <div class="text-center py-20">
            <div class="mb-8">
                <div class="text-9xl mb-4">üå±</div>
                <h1 class="text-5xl font-bold text-slate-900 dark:text-slate-100 mb-4">
                    404 - Page Not Found
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 mb-8 max-w-2xl mx-auto">
                    Oops! It looks like this page got lost in the garden. The URL you're looking for doesn't exist, or might have been moved or renamed.
                </p>
            </div>

            <div class="bg-white dark:bg-[#121812] p-8 rounded-lg shadow-sm border border-slate-200 dark:border-slate-800 mb-8">
                <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6">
                    Let's get you back on track
                </h2>

                <div class="grid md:grid-cols-2 gap-6 text-left">
                    <div>
                        <h3 class="text-lg font-medium text-slate-900 dark:text-slate-100 mb-3">
                            üè† Go Home
                        </h3>
                        <p class="text-slate-600 dark:text-slate-400 mb-4">
                            Return to the main garden and explore the latest thoughts and ideas.
                        </p>
                        <a
                            href="/"
                            class="inline-flex items-center gap-2 bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-md font-medium transition-colors"
                        >
                            Back to Garden
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </a>
                    </div>

                    <div>
                        <h3 class="text-lg font-medium text-slate-900 dark:text-slate-100 mb-3">
                            üîç Search the Garden
                        </h3>
                        <p class="text-slate-600 dark:text-slate-400 mb-4">
                            Use the search to find what you're looking for among all the notes.
                        </p>
                        <a
                            href="/search"
                            class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors"
                        >
                            Search Notes
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <SiteFooter />
    </main>
</Layout>
