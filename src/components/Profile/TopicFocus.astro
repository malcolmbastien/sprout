---
import { getCollection } from "astro:content";

const allNotes = await getCollection("notes");

// Aggregate topic counts
const topicCounts: Record<string, number> = {};
allNotes.forEach((note) => {
    note.data.tags.forEach((tag: string) => {
        topicCounts[tag] = (topicCounts[tag] || 0) + 1;
    });
});

// Get top 16 topics by count
const topTopics = Object.entries(topicCounts)
    .sort(([, a], [, b]) => b - a)
    .slice(0, 16);
---

<div
    class="bg-white dark:bg-[#121812] border border-slate-200 dark:border-slate-800 rounded-xl p-4"
>
    <h3 class="text-sm font-semibold text-slate-900 dark:text-slate-100 mb-4">
        Topics
    </h3>
    <div
        class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-1.5"
    >
        {
            topTopics.map(([topic, count]) => (
                <a
                    href={`/topics/${topic}`}
                    class="topic-btn flex items-center justify-between rounded-lg px-2.5 py-1.5 transition-colors w-full text-left"
                >
                    <span class="text-xs font-medium capitalize">#{topic}</span>
                    <span class="text-xs font-bold">{count}</span>
                </a>
            ))
        }
    </div>
    <a
        href="/topics"
        class="block text-center text-xs font-medium text-slate-600 dark:text-slate-400 mt-3 transition-colors"
    >
        View all topics â†’
    </a>
</div>

<style is:global>
    .topic-btn {
        background-color: rgb(241 245 249);
        border: 1px solid rgb(226 232 240);
        color: rgb(15 23 42);
        transition: all 0.2s;
        text-decoration: none;
    }
    .topic-btn:hover {
        background-color: rgb(248 250 252);
        color: rgb(15 23 42);
    }
    .dark .topic-btn {
        background-color: transparent !important;
        border-color: rgb(71 85 105) !important;
        color: rgb(203 213 225) !important;
    }
    .dark .topic-btn:hover {
        background-color: rgb(51 65 85) !important;
        color: rgb(203 213 225) !important;
    }
</style>
